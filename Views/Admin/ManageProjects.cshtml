@using BugTracker.Helpers
@using BugTracker.Models
@model IEnumerable<UserProfileViewModel>

@{
    ViewBag.Title = "ManageProjects";
}

<h2>ManageProjects</h2>

@{
    var projHelper = new ProjectHelper();
    var roleHelper = new UserRolesHelper();
}



@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    @Html.Hidden("UserId", (string)ViewBag.UserId)

    <div class="row">
        @Html.Label("Assign Project", null, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-offset-1 col-md-3">
            @Html.DropDownList("Projects", null, "-- Select Project --", htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-6">
            <input type="submit" value="Assign" class="btn btn-default" />
        </div>
    </div>

    foreach (var user in Model)
    {
        foreach (var projectName in projHelper.ListUserProjects(user.Id).Select(p => p.Name).ToList())
        {
            @projectName
        }
    }
}

<hr />

<br />

@Html.ActionLink("Back to Dashboard", "Index", "Home")
@Html.ActionLink("Back to User Index", "UserIndex", "Admin")
