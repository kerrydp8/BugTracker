@using BugTracker.Models
@using BugTracker.Helpers
@model IEnumerable<UserProfileViewModel>
@{
    ViewBag.Title = "ManageUserRoles";
}

<h2>ManageUserRoles</h2>

@{
    var roleHelper = new UserRolesHelper();
}

@using (Html.BeginForm("ManageUserRoles", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    @Html.AntiForgeryToken()
    @Html.Hidden("UserId", (string)ViewBag.UserId)

    <div class="form-group">
        @Html.Label("Assign Role", null, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-offset-1 col-md-3">
            @Html.DropDownList("RoleName", null, "-- Select Role --", htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Assign" class="btn btn-primary" />
        </div>
    </div>
}

@Html.ActionLink("Back To Dashboard", "Index", "Home")
@Html.ActionLink("Back to User Index", "UserIndex", "Admin")
