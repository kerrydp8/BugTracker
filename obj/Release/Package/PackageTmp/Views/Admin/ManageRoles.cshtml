@using BugTracker.Models
@using BugTracker.Helpers
@model IEnumerable<UserProfileViewModel>

<h2>Manage Roles for Multiple Users</h2>

@{
    var roleHelper = new UserRolesHelper();
}

@using (Html.BeginForm("ManageRoles", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="row">
        <div class="col-md-offset-2">
            @Html.DropDownList("Users", null, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="col-md-offset-1 col-md-3">
            @Html.DropDownList("RoleName", null, "-- Select Role --", htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-6">
            <input type="submit" value="Assign" class="btn btn-default" />
        </div>
    </div>
}

<hr />

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Full Name")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayName("Role")
        </th>
    </tr>

    @foreach (var user in Model)
    {
        <tr>
            <td>
                @user.LastName, @user.FirstName
            </td>
            <td>
                @Html.DisplayFor(model => user.Email)

            </td>
            <td>
                @roleHelper.ListUserRoles(user.Id).FirstOrDefault()
            </td>
        </tr>
    }
</table>

<br />

@Html.ActionLink("Back to Dashboard", "Index", "Home")
@Html.ActionLink("Back to User Index", "UserIndex", "Admin")

