<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Kerry Peay's Bug Tracker - Demo Login</title>

    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">

    <style>
        .center {
          text-align: center;
        }
    </style>

</head>

<body class="bg-gradient-primary">

    <div class="panel panel-default">
        <div class="panel-body">

            <h1 class="text-center">Demo Logins</h1>
            <hr />

            <div class="row">
                <div class="col-md-6">
                    @using (Html.BeginForm("DemoLoginAsync", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("DemoEmail", "DemoAdminEmail")
                    <section class="panel">
                        <header class="panel-heading bg-gradient-primary"></header>
                        <div class="panel-body">
                            <h3 class="text-semibold mt-none text-center">Demo Administrator</h3>
                            <!--To center something like a button, wrap it in <div class="text-center"-->
                            <div class="text-center"><button type="submit" class="btn btn-xs btn-primary center">Login</button></div>
                        </div>
                        <div class="panel-footer bg-gradient-primary"></div>
                    </section>
                    }
                </div>

                <div class="col-md-6">
                    @using (Html.BeginForm("DemoLoginAsync", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("DemoEmail", "DemoProjectManagerEmail")
                    <section class="panel">
                        <header class="panel-heading bg-gradient-primary"></header>
                        <div class="panel-body">
                            <h3 class="text-semibold mt-none text-center">Demo Project Manager</h3>
                            <!--To center something like a button, wrap it in <div class="text-center"-->
                            <div class="text-center"><button type="submit" class="btn btn-xs btn-primary center">Login</button></div>
                        </div>
                        <div class="panel-footer bg-gradient-primary"></div>
                    </section>
                    }
                </div>
            </div>

            <hr />

            <div class="row">
                <div class="col-md-6">
                    @using (Html.BeginForm("DemoLoginAsync", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("DemoEmail", "DemoDeveloperEmail")
                    <section class="panel">
                        <header class="panel-heading bg-gradient-primary"></header>
                        <div class="panel-body">
                            <h3 class="text-semibold mt-none text-center">Demo Developer</h3>
                            <!--To center something like a button, wrap it in <div class="text-center"-->
                            <div class="text-center"><button type="submit" class="btn btn-xs btn-primary center">Login</button></div>
                        </div>
                        <div class="panel-footer bg-gradient-primary"></div>
                    </section>
                    }
                </div>

                <div class="col-md-6">
                    @using (Html.BeginForm("DemoLoginAsync", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("DemoEmail", "DemoSubmitterEmail")
                    <section class="panel">
                        <header class="panel-heading bg-gradient-primary"></header>
                        <div class="panel-body">
                            <h3 class="text-semibold mt-none text-center">Demo Submitter</h3>
                            <!--To center something like a button, wrap it in <div class="text-center"-->
                            <div class="text-center"><button type="submit" class="btn btn-xs btn-primary center">Login</button></div>
                        </div>
                        <div class="panel-footer bg-gradient-primary"></div>
                    </section>
                    }
                </div>
            </div>

                <div class="text-center">
                    <a class="small" href="">@Html.ActionLink("Forgot Password?", "ForgotPassword", "Account")</a>
                </div>
                <div class="text-center">
                    <a class="small" href="">@Html.ActionLink("Create An Account", "Register", "Account")</a>
                </div>
                <div class="text-center">
                    <a class="small" href="">@Html.ActionLink("Already have an account? Login.", "Login", "Account")</a>
                </div>


           </div>
        </div>

            <!-- Bootstrap core JavaScript-->
            <script src="~/vendor/jquery/jquery.min.js"></script>
            <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

            <!-- Core plugin JavaScript-->
            <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

            <!-- Custom scripts for all pages-->
            <script src="~/js/sb-admin-2.min.js"></script>

</body>

</html>

